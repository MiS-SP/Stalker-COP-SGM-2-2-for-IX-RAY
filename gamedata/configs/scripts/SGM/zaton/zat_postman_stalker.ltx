[logic]
active = move@bring_parcel
on_death = death

[death]
on_info = {-zat_refer_parcel_start} %=create_game_timer(zat_refer_parcel2:8:minutes)%

[move@bring_parcel]
move_dest_number       = 315391
move_look_subject      = actor
move_state_when_center = hello
move_state_when_move   = walk
move_stop_on_talk      = true
meet                   = meet
on_info                = {+zat_refer_parcel_start} move@go_away %=create_game_timer(zat_refer_parcel:5:minutes)%
on_info2               = {=dist_to_actor_ge(80) -zat_refer_parcel_start} nil %=create_game_timer(zat_refer_parcel2:8:minutes) =release_npc%

[move@go_away]
move_avail_speak       = 15|wait|true
move_dest_number       = 261103
move_look_vertex       = 303637
move_state_when_center = sit
move_state_when_move   = walk
on_signal              = on_center|nil %=release_npc%

[meet]
abuse           = true
use             = {=dist_to_actor_le(3) -zat_refer_parcel_start !actor_enemy !has_enemy} self,false
allow_break     = false
meet_on_talking = false
trade_enable    = false