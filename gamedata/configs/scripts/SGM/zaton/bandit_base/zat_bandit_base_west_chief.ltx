[logic]
active = move@chief_without
on_death = death
on_hit = hit

[hit]
on_info = {=hit_by_actor +zat_assault_bandit_base_elbrus} %+zat_assault_bandit_base_alarm%, %+zat_bandit_base_hit%

[death]
on_info = {=killed_by_actor +zat_assault_bandit_base_elbrus} %+zat_assault_bandit_base_alarm +zat_bandit_base_west_chief_death%, {=killed_by_actor -zat_assault_bandit_base_elbrus} %+zat_bandit_base_actor_hit +zat_bandit_base_west_chief_death%, %+zat_bandit_base_hit +zat_bandit_base_west_chief_death%

[move@chief_without]
surge_hide_point       = 1673447
move_dest_number       = 1596637
move_look_vertex       = 1581785
move_state_when_center = ward
move_state_when_move   = walk
meet                   = meet
on_actor_dist_le_nvis  = 10|{-zat_bandit_base_payment} move@chief_found
on_info                = {!actor_enemy +zat_assault_bandit_base_alarm} %=actor_enemy%, {!actor_enemy +zat_bandit_base_actor_hit} %=actor_enemy%
on_info2               = {=zat_b5_stalker_task_hindrance_precond} nil %=kill_npc%

[move@chief_found]
surge_hide_point       = 1673447
move_dest_number       = 1596637
move_look_subject      = {+zat_bandit_base_payment} nil, actor
move_state_when_center = threat
move_state_when_move   = walk
meet                   = meet
on_actor_dist_ge_nvis  = 10|move@chief_without %-zat_bandit_base_west_chief_hello%
on_info                = {+zat_bandit_base_payment} move@chief_without
on_info2               = {!actor_enemy +zat_assault_bandit_base_alarm} %=actor_enemy%, {!actor_enemy +zat_bandit_base_actor_hit} %=actor_enemy%, {-zat_bandit_base_west_chief_hello !has_enemy} %+zat_bandit_base_west_chief_hello =play_s3d_sound(characters_voice\scenario\zaton\zat_b52_port_bandits_after_pay_snd_2)%
on_info3               = {=zat_b5_stalker_task_hindrance_precond} nil %=kill_npc%

[meet]
abuse           = true
use             = {+zat_bandit_base_end_talk !actor_enemy !has_enemy} true, {-zat_bandit_base_payment =dist_to_actor_le(5) !actor_enemy !has_enemy} self, {=actor_enemy} false
allow_break     = false
meet_on_talking = false
trade_enable    = false