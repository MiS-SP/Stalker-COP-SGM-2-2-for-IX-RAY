move_state_when_center = guard
move_state_when_move   = walk
move_look_subject      = actor
move_combat_disable    = true
combat_ignore_cond     = true
combat_ignore_keep_when_attacked = true
invulnerable           = {!actor_enemy} true, false
approach_info          = mil_conduct_night_stalkers_entry|4|<
on_info                = {+mil_conduct_night_stalkers_entry} move@pursue_actor %=play_s3d_sound(characters_voice\human_01\stalker\alife\attack\attack_begin_1)%

[move@pursue_actor]
move_pursue_actor      = true
move_pursue_range      = 8|35
move_pursue_formation  = back
invulnerable           = {!actor_enemy} true, false
on_info                = {+mil_conduct_night_stalkers_came} move@go_in_home
on_info2               = {=npc_in_zone(val_b7_sr_noweap_1) !has_enemy -mil_conduct_night_stalkers_came} %+mil_conduct_night_stalkers_came%, {=npc_in_zone(val_b7_sr_noweap_2) !has_enemy -mil_conduct_night_stalkers_came} %+mil_conduct_night_stalkers_came%, {=npc_in_zone(val_b7_sr_noweap_3) !has_enemy -mil_conduct_night_stalkers_came} %+mil_conduct_night_stalkers_came%

[move@go_in_home]
move_dest_number       = 272028
move_look_vertex       = 269473
move_state_when_center = ward
move_state_when_move   = assault
move_center_info       = mil_conduct_night_stalkers_allow_meet
meet                   = meet
invulnerable           = {-mil_conduct_night_stalkers_talk !actor_enemy} true, false
on_info                = {-mil_conduct_night_stalkers_autosave} %+mil_conduct_night_stalkers_autosave =scenario_autosave(st_save_mil_conduct_night_stalkers_done)%

[meet]
abuse           = false
use             = {!actor_enemy +mil_conduct_night_stalkers_allow_meet} true, false
allow_break     = false
meet_on_talking = false
trade_enable    = false