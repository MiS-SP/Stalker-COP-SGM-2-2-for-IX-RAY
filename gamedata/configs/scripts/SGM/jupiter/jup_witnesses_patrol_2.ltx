[logic]
active = move@witnesses_1
on_death = death
on_hit = hit

[hit]
on_info = {=present_hit_by_actor} %+jup_avoid_witnesses_alarm%

[death]
on_info = %+jup_avoid_witnesses_alarm =jup_witnesses_members_update%

[move@witnesses_1]
move_dest_number       = 1207254
move_state_when_center = guard
move_state_when_move   = patrol
meet                   = meet
on_signal              = on_center|move@witnesses_2
on_info                = {=actor_enemy -jup_avoid_witnesses_alarm} %=actor_neutral%, {!actor_enemy +jup_avoid_witnesses_alarm} %=actor_enemy%

[move@witnesses_2]
move_dest_number       = 1217533
move_state_when_center = guard
move_state_when_move   = patrol
meet                   = meet
on_signal              = on_center|move@witnesses_1
on_info                = {=actor_enemy -jup_avoid_witnesses_alarm} %=actor_neutral%, {!actor_enemy +jup_avoid_witnesses_alarm} %=actor_enemy%

[meet]
abuse           = true
use             = {!actor_enemy} true, false
allow_break     = true
meet_on_talking = false
trade_enable    = false

