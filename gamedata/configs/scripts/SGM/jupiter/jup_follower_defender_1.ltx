[logic]
active = move@waiting
on_death = death
on_hit = hit

[hit]
on_info = {=present_hit_by_actor} %+jup_follower_scientist_actor_hit%

[death]
on_info = %=jup_follower_scientist_check%

[move@waiting]
move_dest_number       = 375690
move_look_vertex       = 364985
move_state_when_center = guard
move_state_when_move   = walk
on_info                = {+jup_follow_scientists_nachinaem -jup_follow_scientists_t1} move@pursue_scientists, {+jup_follow_scientists_t1} move@stay_outpost %=jup_replace_on_tower_1%, {+jup_follower_scientist_actor_hit !actor_enemy} nil %=actor_enemy +jup_follow_scientists_fail%

[move@pursue_scientists]
move_dest_number       = 601998
move_look_vertex       = 582588
move_state_when_center = guard
move_state_when_move   = assault
on_signal              = on_center|move@stay_outpost %=jup_replace_on_tower_1 +jup_follow_scientists_t1%
on_info                = {+jup_follow_scientists_t1} move@stay_outpost %=jup_replace_on_tower_1%
on_info2               = {+jup_follower_scientist_actor_hit !actor_enemy} nil %=actor_enemy +jup_follow_scientists_fail%

[move@stay_outpost]
move_avail_speak       = 15|wait|true|true
move_dest_number       = 619904
move_look_vertex       = 606423
move_state_when_center = guard
move_state_when_move   = walk
on_info                = {+jup_follower_scientist_actor_hit !actor_enemy} nil %=actor_enemy +jup_follow_scientists_fail%

[meet]
abuse           = true
use             = {!actor_enemy} true, false
allow_break     = true
meet_on_talking = false