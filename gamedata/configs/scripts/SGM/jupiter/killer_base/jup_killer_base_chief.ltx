active = move@chief_wait
on_death = death

[death]
on_info = {=killed_by_actor} %+jup_killer_base_actor_hit%

[move@chief_wait]
surge_hide_point       = 1072141
move_dest_number       = 1016939
move_look_vertex       = 1028159
move_state_when_center = ward
move_state_when_move   = walk
meet                   = meet
on_actor_dist_le_nvis = 20|{-jup_killer_base_chief_payment} move@chief_welcome
on_info                = {!actor_enemy +jup_killer_base_actor_hit} %=actor_enemy%
on_info2               = {+jup_killer_base_chief_payment} move@chief_back

[move@chief_welcome]
surge_hide_point       = 1072141
move_dest_number       = 1021873
move_state_when_center = ward
move_state_when_move   = walk
move_look_subject      = actor
meet                   = meet
on_actor_dist_ge_nvis  = 20|move@chief_wait
on_actor_dist_le_nvis  = 8|{-jup_killer_base_chief_hello} %+jup_killer_base_chief_hello =play_s3d_sound(characters_voice\human_01\killer\threat\back_off\backoff_4)%
on_info                = {!actor_enemy +jup_killer_base_actor_hit} %=actor_enemy%
on_info2               = {!actor_talking +jup_killer_base_chief_payment} move@chief_back %=play_s3d_sound(characters_voice\human_01\killer\states\loot\loot_good_1)%

[move@chief_back]
surge_hide_point       = 1072141
move_dest_number       = 1024373
move_look_vertex       = 1023124
move_state_when_center = ward
move_state_when_move   = walk
meet                   = meet
on_info                = {!actor_enemy +jup_killer_base_actor_hit} %=actor_enemy%

[meet]
close_anim      = wait_na
close_snd_hello = nil
close_snd_bye   = nil
close_victim    = actor
abuse           = true
use             = {!actor_enemy =dist_to_actor_le(5) -jup_killer_base_chief_dist !has_enemy} self, {!actor_enemy +jup_killer_base_chief_dist !has_enemy} true, false
use_wpn         = false
allow_break     = true
meet_on_talking = false
trade_enable    = false

