[logic]
active = move@waiting
on_death = death
on_hit = hit

[hit]
on_info = {=present_hit_by_actor} %+jup_follower_scientist_actor_hit%

[death]
on_info = %=jup_follower_scientist_check%

[move@waiting]
move_dest_number       = 389539
move_look_vertex       = 381453
move_state_when_center = guard
move_state_when_move   = walk
on_info                = {+jup_follow_scientists_nachinaem -jup_follow_scientists_t2} move@pursue_scientists, {+jup_follow_scientists_t2} move@stay_outpost %=jup_replace_on_tower_2%, {+jup_follower_scientist_actor_hit !actor_enemy} nil %=actor_enemy +jup_follow_scientists_fail%

[move@pursue_scientists]
move_dest_number       = 603103
move_look_vertex       = 579095
move_state_when_center = guard
move_state_when_move   = assault
on_signal              = on_center|move@stay_outpost %=jup_replace_on_tower_2 +jup_follow_scientists_t2%
on_info                = {+jup_follow_scientists_t2} move@stay_outpost %=jup_replace_on_tower_2%
on_info2               = {+jup_follower_scientist_actor_hit !actor_enemy} nil %=actor_enemy +jup_follow_scientists_fail%

[move@stay_outpost]
move_dest_number       = 622074
move_look_vertex       = 629747
move_state_when_center = guard
move_state_when_move   = walk
on_info                = {+jup_follower_scientist_actor_hit !actor_enemy} nil %=actor_enemy +jup_follow_scientists_fail%

[meet]
abuse           = true
use             = {!actor_enemy} true, false
allow_break     = true
meet_on_talking = false