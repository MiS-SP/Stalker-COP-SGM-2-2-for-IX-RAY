[logic]
active = move@guard_sentry
on_death = death
on_hit = hit

[hit]
on_info = {=present_hit_by_actor} %+pri_monolit_base_actor_hit +pri_monolit_base_hit%, %+pri_monolit_base_hit%

[death]
on_info = {=killed_by_actor} %+pri_monolit_base_alarm +pri_monolit_base_actor_hit +pri_monolit_base_sentry_1_death%, %+pri_monolit_base_sentry_1_death +pri_monolit_base_hit%

[move@guard_sentry]
surge_hide_point       = 249914
move_avail_speak       = 15|wait|false|true
move_dest_number       = 266586
move_look_vertex       = 267441
move_state_when_center = guard
move_state_when_move   = patrol
meet                   = meet
on_info                = {+pri_assault_monolith_base_on_firepos -pri_assault_monolith_base_fail -pri_assault_monolith_base_enemy_destroyed} move@base_defence
on_info2               = {+pri_monolith_base_enemy_actor !actor_enemy} nil %=actor_enemy%
on_info3               = {!actor_enemy +pri_monolit_base_alarm} %=actor_enemy%

[move@base_defence]
move_dest_number       = 203372
move_look_vertex       = 240757
move_state_when_center = hide
move_state_when_move   = assault
on_signal              = on_center|nil
on_info                = {+pri_assault_monolith_base_fail} move@guard_sentry
on_info2               = {!actor_enemy} %=actor_enemy%

[meet]
abuse           = true
use             = false
allow_break     = true
meet_on_talking = false