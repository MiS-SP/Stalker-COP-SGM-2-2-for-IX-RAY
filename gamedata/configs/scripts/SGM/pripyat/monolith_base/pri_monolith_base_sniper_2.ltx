[logic]
active = move@pathfinder
on_death = death
on_hit = hit

[hit]
on_info = {=present_hit_by_actor} %+pri_monolit_base_actor_hit +pri_monolit_base_hit%, %+pri_monolit_base_hit%

[death]
on_info = {=killed_by_actor} %+pri_monolit_base_alarm +pri_monolit_base_actor_hit +pri_monolit_base_sniper_2_death%, %+pri_monolit_base_sniper_2_death +pri_monolit_base_hit%

[move@pathfinder]
scheme_type            = shooter
shooter_pos            = 192057
shooter_fire_look      = enemy
shooter_idle_look      = actor
shooter_clip           = -1
shooter_reload         = 1
shooter_type_wpn       = rifle
shooter_need_see       = true
shooter_need_dist      = 80
shooter_move_state     = walk
shooter_idle_state     = threat
shooter_fire_state     = threat_fire
shooter_avail_cond     = {+pri_monolit_base_actor_hit} true, false
meet                   = meet
combat_ignore_cond     = true
combat_ignore_keep_when_attacked = true
on_info                = {+pri_assault_monolith_base_on_firepos -pri_assault_monolith_base_fail -pri_assault_monolith_base_enemy_destroyed} move@base_defence
on_info2               = {!actor_enemy +pri_monolit_base_alarm} %=actor_enemy%

[move@base_defence]
move_dest_number       = 264823
move_look_vertex       = 240757
move_state_when_center = hide
move_state_when_move   = assault
on_signal              = on_center|nil
on_info                = {+pri_assault_monolith_base_fail} move@pathfinder
on_info2               = {!actor_enemy} %=actor_enemy%

[meet]
abuse           = true
use             = false
allow_break     = true
meet_on_talking = false