[logic]
active = move@leader
on_death = death
on_hit = hit

[hit]
on_info = {=present_hit_by_actor} %+pri_monolit_base_alarm +pri_monolit_base_actor_hit +pri_monolit_base_hit%, %+pri_monolit_base_hit%

[death]
on_info = {=killed_by_actor} %+pri_monolit_base_alarm +pri_monolit_base_actor_hit +pri_monolit_base_leader_death +pri_monolit_base_hit =increase_counter(stat_ubil_bosov)%, %+pri_monolit_base_hit +pri_monolit_base_leader_death =increase_counter(stat_ubil_bosov)%

[move@leader]
move_dest_number       = 221731
move_look_vertex       = 220726
move_state_when_center = choose
move_state_when_move   = walk
meet                   = meet
on_info                = {+pri_assault_monolith_base_on_firepos -pri_assault_monolith_base_fail -pri_assault_monolith_base_enemy_destroyed} move@base_defence
on_info2               = {+pri_monolith_base_enemy_actor !actor_enemy} nil %=actor_enemy%
on_info3               = {!actor_enemy +pri_monolit_base_alarm} %=actor_enemy%

[move@base_defence]
move_dest_number       = 343148
move_look_vertex       = 307367
move_state_when_center = hide
move_state_when_move   = assault
on_signal              = on_center|nil
on_info                = {+pri_assault_monolith_base_fail} move@leader
on_info2               = {!actor_enemy} %=actor_enemy%

[meet]
abuse           = true
use             = {+actor_noted_monoliths -actor_entry_in_monolith !actor_talking} false, {!actor_enemy !has_enemy} true, false
allow_break     = false
meet_on_talking = false
trade_enable    = false