[logic]
active = ph_universal

[ph_universal]
scheme_type = explosive_object
explosive_object_tip = tip_door_open
explosive_object_sound = detectors\bomb_timer
explosive_object_timer = 10000
on_use = {-red_forester_door_charge} %+red_forester_door_charge =red_forester_door_charge%

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@close

[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open