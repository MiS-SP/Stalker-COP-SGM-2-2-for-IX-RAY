[logic]
active = sr_idle@start

[sr_idle@start]
on_info  = {+val_assault_factory_squad_in_sneak -val_assault_factory_squad_signal} sr_idle@squad_signal
on_info2 = {+val_assault_factory_garrison_destroyed} sr_idle@reinforcement
on_info3 = {+val_alt_storyline_commenced} sr_idle@end

[sr_idle@squad_signal]
on_timer = 60000|sr_idle@reinforcement %+val_assault_factory_squad_signal%

[sr_idle@reinforcement]
on_info  = {+val_assault_factory_pda_brought !squad_exist(val_b1_night_stalker_squad)} sr_idle@end %=create_squad(val_b1_night_stalker_squad:val_smart_terrain_1)%
on_info2 = {+val_alt_storyline_commenced} sr_idle@end

[sr_idle@end]