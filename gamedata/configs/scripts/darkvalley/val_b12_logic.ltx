[walker@def_guarder]
use_camp = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
precond_timer = {!actor_enemy =actor_has_weapon} true, false

[remark@def_guarder]
anim = threat
target = story|actor
on_info = {-val_b12_outpost_guard =actor_has_weapon} %+val_b12_outpost_guard =play_sound_theme(zat_a2_base_guard)%

;

[logic@val_b12_commander]
active = walker@commander
suitable = {=check_npc_name(val_b12_outpost_commander) !surge_started -val_storyline_done} true
prior = 200

[walker@commander]:walker@def_guarder
path_walk = commander_walk
path_look = commander_look
on_info = {=check_precond_timer(3000) =dist_to_actor_le(15)} remark@commander
invulnerable = {-val_alt_storyline_commenced} true, false

[remark@commander]:remark@def_guarder
on_info2 = {!actor_has_weapon} walker@commander %-val_b12_outpost_guard%
on_game_timer = 180|walker@commander %-val_b12_outpost_guard%

;

