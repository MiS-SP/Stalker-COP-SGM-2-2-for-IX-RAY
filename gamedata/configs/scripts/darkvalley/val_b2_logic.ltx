[walker@def_guarder]
use_camp = false
gather_items_enabled = false
help_wounded_enabled = true
corpse_detection_enabled = false
approach_info = val_first_coming_valley_came_to_farm|14|<
precond_timer = {!actor_enemy =actor_has_weapon} true, false

