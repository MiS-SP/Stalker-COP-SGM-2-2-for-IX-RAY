path_look = leader_look
use_camp = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
meet = meet@b2_leader
on_info = {-val_kill_night_predator_radio_talk +val_kill_night_predator_say_about_plan !npc_talking} remark@leader_talk_with_leonid
on_info2 = {+mil_akulov_offer_raciya -mil_akulov_offer_raciya_end !npc_talking} remark@leader_talk_with_morten
invulnerable = {-val_alt_storyline_commenced} true, false

[remark@leader_talk_with_leonid]
meet = no_meet
anim = wait_rac
target = story|actor
on_timer = 10000|walker@leader %+val_kill_night_predator_radio_talk%

[remark@leader_talk_with_morten]
meet = no_meet
anim = wait_rac
target = story|actor
on_timer = 10000|walker@leader %+mil_akulov_offer_raciya_end%

[meet@b2_leader]
