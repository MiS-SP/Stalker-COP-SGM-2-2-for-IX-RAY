[walker@def_guarder]
use_camp = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
;precond_timer = {!actor_enemy =actor_has_weapon} true, false

[walker@defence]:walker@def_guarder
precond_timer = false
meet = no_meet

[remark@def_guarder]
anim = threat
target = story|actor
on_info = {-val_b14_outpost_guard =actor_has_weapon} %+val_b14_outpost_guard =play_sound_theme(zat_a2_base_guard)%

;

[logic@val_b14_commander]
active = walker@commander
suitable = {=check_npc_name(val_b14_outpost_commander) !surge_started -val_storyline_done} true
prior = 200

[walker@commander]:walker@def_guarder
path_walk = commander_walk
path_look = commander_look
on_info = {=check_precond_timer(3000) =dist_to_actor_le(15)} remark@commander
on_info2 = {+val_kill_night_predator_setup_ambush -val_kill_night_predator_chimera_defeated =dist_to_actor_ge(10)} walker@commander_defence %+val_kill_night_predator_b14_defence%
invulnerable = {-val_kill_night_predator_setup_ambush -val_alt_storyline_commenced} true, false
meet = meet@b14_commander

[walker@commander_defence]:walker@defence
path_walk = commander_defence_walk
path_look = commander_defence_look
on_info2 = {+val_kill_night_predator_chimera_defeated} walker@commander

[remark@commander]:remark@def_guarder
on_info2 = {!actor_has_weapon} walker@commander %-val_b14_outpost_guard%
on_game_timer = 180|walker@commander %-val_b14_outpost_guard%

[meet@b14_commander]
abuse = false
use = {!actor_enemy !actor_has_weapon !has_enemy} true, false
allow_break = false
trade_enable = false

;

